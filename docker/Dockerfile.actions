# docker/Dockerfile.actions

FROM rasa/rasa-sdk:3.6.2

WORKDIR /app/actions

# Instalar dependencias para acciones personalizadas
COPY rasa/actions/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar las acciones personalizadas
COPY rasa/actions/ .

# Ejecutar el action server
CMD ["rasa", "run", "actions", "--debug"]