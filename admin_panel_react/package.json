{
  "name": "chatbot-tutor-virtual-admin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173 --strictPort",
    "test": "vitest",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",

    "screenshots": "playwright test tests/visual/screenshots.spec.ts --project=chromium",
    "screenshots:headed": "playwright test tests/visual/screenshots.spec.ts --project=chromium --headed",
    "screenshots:a11y": "playwright test tests/visual/screenshots.a11y.spec.ts --project=chromium",

    "screenshots:clean": "node scripts/visuals-clean.mjs archive",
    "screenshots:archive-rebuild": "npm run screenshots:clean && npm run screenshots",

    "screenshots:prod": "npm run screenshots:clean && playwright test tests/visual/screenshots.spec.ts --project=chromium",
    "screenshots:prod:headed": "npm run screenshots:clean && playwright test tests/visual/screenshots.spec.ts --project=chromium --headed",
    "screenshots:prod:archive": "npm run screenshots:clean && npm run screenshots",
    "screenshots:prod:archive-headed": "npm run screenshots:clean && npm run screenshots:headed",

    "screenshots:prod:ci": "node -e \"if(!process.env.PLAYWRIGHT_BASE_URL){console.error('‚ùå Missing PLAYWRIGHT_BASE_URL');process.exit(1)}\" && npm run screenshots:prod"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.51.1",
    "axios": "^1.7.2",
    "classnames": "^2.3.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^22.17.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^5.4.2",
    "vitest": "^1.0.4"
  }
}