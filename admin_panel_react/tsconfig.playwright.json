{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
    "types": [ "@playwright/test", "node" ],
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.mts",
    "tests/**/*.cts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}