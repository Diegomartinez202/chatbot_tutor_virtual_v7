<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Carpeta base del proyecto (está dentro de backend) -->
    <ProjectHome>.</ProjectHome>
    <!-- Archivo de inicio (dentro de backend) -->
    <StartupFile>main.py</StartupFile>

    <!-- Ruta del intérprete: tu venv -->
    <InterpreterPath>..\ .venv\Scripts\python.exe</InterpreterPath>

    <!-- Donde se ejecuta: la raíz del repo para que "backend.main" resuelva bien -->
    <WorkingDirectory>..\</WorkingDirectory>

    <!-- Argumentos: ejecuta Uvicorn -->
    <CommandLineArguments>-m uvicorn backend.main:app --reload --host 127.0.0.1 --port 8000</CommandLineArguments>

    <!-- Añadimos la raíz al PYTHONPATH -->
    <SearchPath>..\</SearchPath>

    <LaunchProvider>Standard Python launcher</LaunchProvider>
    <Name>backend</Name>
    <ConfigurationType>Python</ConfigurationType>
    <IsWindowsApplication>False</IsWindowsApplication>
  </PropertyGroup>

  <ItemGroup>
    <!-- Incluye tu main.py; agrega otros .py si quieres que aparezcan en el explorador -->
    <Compile Include="main.py" />
  </ItemGroup>

  <Import Project="$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)\Python Tools\Microsoft.PythonTools.targets" Condition="Exists('$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)\Python Tools\Microsoft.PythonTools.targets')" />
</Project>
